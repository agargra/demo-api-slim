{
    "name": "agargra/demo-api-slim",
    "description": "Slim API Rest Demo.",  
    "require": {
        "php": "^7.4 || ^8.0",
        "firebase/php-jwt": "^5.0",
        "slim/slim": "^3.12.3",
        "vlucas/phpdotenv": "^5.1",
        "guzzlehttp/guzzle": "^7.0",
        "respect/validation": "^1.1",
        "doctrine/dbal": "^2.5",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "database": "php extras/init-db.php",
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit tests"
    },
    "config": {
        "process-timeout": 0
    }    
    
}
